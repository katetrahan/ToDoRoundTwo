{{#partial "content"}}
<p>Here are all the tasks listed in the category:    {{category.name}} </p>

<ul>
    {{#each tasks}}
    <li>
        <h5>Task Name:</h5>
        <p>{{description }}</p>
        <h5>Created At:</h5>
        <p> {{createdAt}}</p>
        <h5>Task status:</h5>
        {{#if completed }}
        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}
        <br>
        <a href="/tasks/update">Edit this task</a><br>
        <a href="/tasks/delete">DELETE this task (no undo)</a>
        </p>
    </li>
    {{/each}}
</ul>
<a href="/categories/update">Edit this category</a><br>
<a href="/categories/delete">DELETE this category (no undo)</a>

{{/partial}}

{{> layout.hbs}}